{
    "compilerOptions": {
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "outDir": "app",
        "removeComments": true,
        "skipLibCheck": true 
    },
    "exclude": [
        "node_modules",
        "app",
        "build",
        "tests",
        "install"
    ],
    "compileOnSave": false
}

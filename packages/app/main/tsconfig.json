{
  "compilerOptions": {
    "importHelpers": true,
    "module": "none",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "target": "es2017",
    "jsx": "react",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "outDir": "app/server",
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./app",
    "./built",
    "./dist",
    "./node_modules",
    "./scripts",
    "./__tests__/**/*",
    "./**/*.spec.ts",
    "./**/*.test.ts"
  ],
  "compileOnSave": false
}
